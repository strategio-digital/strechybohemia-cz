{varType ContentioSdk\Controller\ErrorController $controller}
{varType array $_ENV}
{varType array $error}

{extends './../@layout.latte'}

{block head}
    <meta name="robots" content="noindex,nofollow">
    <title>404 - Stránka nenalezena</title>
{/block}

{block top}{/block}

{block content}
    <div class="d-flex w-100 h-100 justify-content-center align-items-center bg-dark">
        <div class="container position-relative text-white">
            <h1 class="display-3 font-weight-bolder mb-0 mt-5">
                {$error['code']}
            </h1>
            <p class="h3 mt-4">
                Omlouváme se, ale tato pod-stránka webu již
                <br class="d-none d-md-block"> nejspíše neexistuje. Vraťe se zpět na úvod.
            </p>
            {if $_ENV['APP_ENV_MODE'] === 'develop'}
                <p class="small mt-3 text-white-50" n:ifset="$error['message']">{$error['message']}</p>
            {/if}
            <div class="d-md-inline-flex mt-4">
                <a href="{$controller->link('home')}" class="btn btn-outline-light">
                    Zpět na úvod
                </a>
            </div>
        </div>
    </div>
{/block}